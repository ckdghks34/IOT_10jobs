<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="맵 생성"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:fontFamily="@font/paybooc"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="맵이 존재하지 않습니다."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/paybooc"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="터틀봇을 이동하여 본인 집의 지도를 그리세요"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/paybooc"/>

    <ImageView
        android:id="@+id/map_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_corner"
        android:layout_marginTop="10dp"
        android:text="START"
        android:fontFamily="@font/paybooc"/>

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_corner"
        android:layout_marginTop="10dp"
        android:text="STOP"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/arrowkeys_up"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginBottom="28dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="moveUp"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_up" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/arrowkeys_left"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="30dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="moveLeft"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_left" />

        <ImageButton
            android:id="@+id/arrowkeys_down"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginBottom="30dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="moveDown"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_down" />

        <ImageButton
            android:id="@+id/arrowkeys_right"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="30dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="moveRight"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_right" />
    </LinearLayout>

</LinearLayout>